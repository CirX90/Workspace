package grundlagen;

import java.util.Scanner;

public class Beginn {
	
public static void main(String [] args) {
	
	int zahl = 1, ergebnis = 0;
	
	Scanner scanner = new Scanner(System.in);
	System.out.println("Ganze Zahl eingeben.");
	int wert = scanner.nextInt();
	scanner.close();
	
	while(zahl <= wert) {
		ergebnis += zahl;
	System.out.println(ergebnis);
		zahl++;
		}
	
	System.out.print("Summe 1 bis " + zahl + " = " + ergebnis);
	
	}
}