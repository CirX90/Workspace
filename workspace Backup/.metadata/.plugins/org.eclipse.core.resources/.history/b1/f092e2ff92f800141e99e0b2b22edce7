package aufgabenblatt4_1;

import java.util.Scanner;

public class Tamagotchi {

	// Deklarieren, Startwert = 0,
	private int hunger;
	private int langeweile;
	private int muedigkeit;
	private int punkte;

	// Konstruktor
	public Tamagotchi(int hunger, int langeweile, int muedigkeit, int punkte) {

		this.hunger = hunger;
		this.langeweile = langeweile;
		this.muedigkeit = muedigkeit;
		this.punkte = punkte;

	}

	// Werte erhöhen +1
	public void tick() {

		this.hunger++;
		this.langeweile++;
		this.muedigkeit++;

	}

	// Methode schlaf setzt Müdigkeit u. Langeweile auf 0
	// hunger +1
	public void schlaf() {

		this.muedigkeit = 0;
		this.hunger++;
		this.langeweile = 0;
	}

	public void spiel() {

		this.langeweile = 0;
		this.hunger++;
		this.muedigkeit++;
	}

	public void iss() {

		this.hunger = 0;
		this.langeweile++;

	}

	public void nichts() {
		
	}

	public String verarbeiteKommando() {
		
		return kommando;

	}

	public void printPunktestand() {

		System.out.println(punkte);
	}

	public int getPunktestand() {
		return punkte;
	}
	
	// Main-Methode
	public static void main(String[] args) {
	
	Tamagotchi tama = new Tamagotchi(0, 0, 0, 0);
	
	while (true) {
		tama.tick();
	}
	
	
  }
	
}