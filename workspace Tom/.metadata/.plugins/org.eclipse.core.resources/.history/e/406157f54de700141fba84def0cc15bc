package aufgabenblatt2_1;

import java.util.*;

public class satellitenzeit {
	public static void main(String[] args) {
		
		// Scanner initialisierung
		Scanner scanner = new Scanner(System.in);
		System.out.println("Bitte Sekunden angeben.");
		int eingabe = scanner.nextInt();
		scanner.close();
		
		// Deklaration
				int second=eingabe%60;
				int minute=(second/60)%60;
				int hour=(second/60/60)%24;
				int day=(second/60/60/24)%365;
				
		// Ausgabe und Formatierung der Ausgabe
		System.out.format("%d Tage  %d:%d:%d\n");
		
		// mit Stunden weiterrechnen
	
		
		System.out.println();
		
		// Konvention: Klassenname
		// Variablen für Ergebnis <- Konventionen
		// sprechende Variablennamen
	}
			
}