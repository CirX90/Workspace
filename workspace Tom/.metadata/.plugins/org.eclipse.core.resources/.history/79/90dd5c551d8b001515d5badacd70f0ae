package dasRatespiel;

public class Ratespiel {

	Spieler s1 = new Spieler();
	Spieler s2 = new Spieler();
	Spieler s3 = new Spieler();
	
	int zufallsZahlSpiel = (int) (Math.random() * 10);

	public String starteSpiel() {
		
		if(zufallsZahlSpiel == s1.zufallsZahlSpieler) {
			return "Spieler 1 hat die Zufallszahl " + zufallsZahlSpiel +
					" richtig erraten!";
		}
		
		if(zufallsZahlSpiel == s2.zufallsZahlSpieler) {
			return "Spieler 2 hat die Zufallszahl " + zufallsZahlSpiel +
					" richtig erraten!";
		}
		
		if(zufallsZahlSpiel == s3.zufallsZahlSpieler) {
			return "Spieler 3 hat die Zufallszahl " + zufallsZahlSpiel +
					" richtig erraten!";
		}
		
		return "Kein Spieler hat die Zufallszahl " + zufallsZahlSpiel
				+ " erraten!";

	}

}
