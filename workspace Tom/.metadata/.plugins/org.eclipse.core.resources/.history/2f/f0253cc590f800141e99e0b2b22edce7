package aufgabenblatt4_1;

import java.util.Scanner;

public class Tamagotchi {

	// Deklarieren, Startwert = 0,
	private int hunger;
	private int langeweile;
	private int muedigkeit;
	private int punkte;

	// Konstruktor
	public Tamagotchi(int hunger, int langeweile, int muedigkeit, int punkte) {

		this.hunger = hunger;
		this.langeweile = langeweile;
		this.muedigkeit = muedigkeit;
		this.punkte = punkte;

	}

	// Werte erhöhen + Meldung wenn Werte > 3
	public void tick() {

		this.hunger++;
		this.langeweile++;
		this.muedigkeit++;

	}

	// Methode schlaf setzt Müdigkeit auf 0
	// hunger u. langeweile +1
	public void schlaf() {

		this.muedigkeit = 0;
		this.hunger++;
		this.langeweile = 0;
	}

	public void spiel() {

		this.langeweile = 0;
		this.hunger++;
		this.muedigkeit++;
	}

	public void iss() {

		this.hunger = 0;
		this.langeweile++;

	}

	public String verarbeiteKommando() {
		String kommando;
		return kommando;

	}

	public void printPunktestand() {

	}

	// Main-Methode
	public static void main(String[] args) {
	
	Tamagotchi tama = new Tamagotchi(0, 0, 0, 0);
	
	While (String != "ende");		
	
	
  }
	
}