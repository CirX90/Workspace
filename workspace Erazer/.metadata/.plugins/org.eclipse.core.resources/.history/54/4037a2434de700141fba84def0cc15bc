package aufgabenblatt2_1;

import java.util.*;

public class satellitenzeit {
	public static void main(String[] args) {
		
		// Scanner initialisierung
		Scanner scanner = new Scanner(System.in);
		System.out.println("Bitte Sekunden angeben.");
		int x = scanner.nextInt();
		scanner.close();
		
		int dfasokjhuiorcbnjknuircnejkr = 23;
		
		// Deklaration
				int s=x;
				int m=s/60;
				int h=m/60;
				int d=h/24;
				
		// Ausgabe und Formatierung der Ausgabe
		System.out.format("%d Tage  %d:%d:%d\n", d%365, h%24, m%60, s%60);
		
		// mit Stunden weiterrechnen
	
		int Tage=(s/60/60/24)%365;
		System.out.println(Tage);
		
		System.out.println();
		
		// Konvention: Klassenname
		// Variablen für Ergebnis <- Konventionen
		// sprechende Variablennamen
	}
			
}