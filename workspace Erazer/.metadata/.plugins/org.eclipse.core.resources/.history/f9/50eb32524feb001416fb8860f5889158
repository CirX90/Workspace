package grundlagen;

import java.util.*;

public class Beginn {

	public static void main(String[] args) {

		//int zahl = 4;
		int ergebnis = 0;
		int zaehler = 1;
		//int i = 0;

		Scanner scanner = new Scanner(System.in);
		System.out.println("Bitte ganze Zahl angeben.");
		int zahl = scanner.nextInt();
		scanner.close();

		while (zahl <= zaehler) {
			System.out.println(ergebnis);
			ergebnis = ergebnis + zaehler;
			zaehler++; // 1 2 3 4
		}

		// System.out.println(ergebnis);
	}
}